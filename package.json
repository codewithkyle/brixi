{
    "name": "brixi",
    "version": "0.6.1",
    "description": "A lightweight (1.3kb) highly configurable utility-first CSS framework.",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/codewithkyle/brixi.git"
    },
    "keywords": [
        "utility",
        "css-framework",
        "web-components",
        "css-variables"
    ],
    "author": "Kyle Andrews",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/codewithkyle/brixi/issues"
    },
    "homepage": "https://brixi.dev/",
    "bin": {
        "brixi": "./cli.js"
    },
    "engines": {
        "node": ">=14.5.0"
    },
    "files": [
        "cli.js",
        "config.js",
        "src",
        "brixi.min.css"
    ],
    "devDependencies": {
        "@codewithkyle/dev-docs": "^1.0.3",
        "gh-pages": "^3.2.3",
        "prettier": "^2.5.1",
        "serve": "^11.3.2"
    },
    "dependencies": {
        "glob": "^7.2.0",
        "minify": "^7.2.2",
        "ora": "^4.1.1",
        "semver": "^7.3.5",
        "yargs": "^15.4.1"
    },
    "scripts": {
        "preview": "serve ./public",
        "test": "node ./cli.js -c ./demo.config.js && mv ./brixi/brixi.css ./test/brixi.css && serve ./test",
        "docs": "docs",
        "build": "node ./cli.js && mv ./brixi/brixi.css ./brixi.min.css",
        "predeploy": "docs -o ./public -c ./CNAME",
        "deploy": "node ./deploy.js"
    },
    "docs": {
        "name": "Brixi",
        "github": "https://github.com/codewithkyle/brixi/",
        "npm": "https://www.npmjs.com/package/brixi"
    }
}
